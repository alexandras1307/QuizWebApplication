            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionOption1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionOption2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionOption3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionOption4)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CorrectOption)
        </td>
    </tr>
