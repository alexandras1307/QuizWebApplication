@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Styles/font-awesome.css" rel="stylesheet" />
    <link href="~/Styles/style.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body style="background-image: url(../images/onlineeduLoginBackground.jpg); background-repeat: no-repeat; background-size:cover; background-position-y:initial">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("OnlineSchool", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        <div class="container body-content" style="align-self:center; padding-top:330px">
            <div style="align-content:stretch">
                <h1>404<br />Error</h1>
                <h2>An error occurred while processing your request.</h2>
                <h3 style="font-size:x-large; font-weight:bold">
                    @Html.ActionLink("Go to Home Page", "Index", "Home")
                </h3>
            </div>
        </div>
    </div>
</body>
</html>
