
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayoutPage.cshtml";
}

<h2>Login</h2>

<h1 style="position:fixed; top:200px; left: 700px">Student Login Form </h1>
<div class="w3ls-login box box--big" style="position:fixed; top: 370px; left: 600px">
    <!-- form starts here -->
    <form action="Verify" method="post">
        <div class="agile-field-txt">
            <label><i class="fa fa-user" aria-hidden="true"></i> Email </label>
            <input type="text" name="Email" placeholder="Enter Email" required="" />
        </div>
        <div class="agile-field-txt">
            <label><i class="fa fa-unlock-alt" aria-hidden="true"></i> password </label>
            <input type="password" name="Password" placeholder="Enter Password" required="" id="myInput" />
            <div class="agile_label">
                <input id="check3" name="check3" type="checkbox" value="show password" onclick="myFunction()">
                <label class="check" for="check3">Show password</label>
            </div>
            <div class="agile-right">
                <a href="/StudentRegistration/Index">No account? Register!</a>
            </div>
        </div>
        <!-- script for show password -->
        <script>
            function myFunction() {
                var x = document.getElementById("myInput");
                if (x.type === "password") {
                    x.type = "text";
                } else {
                    x.type = "password";
                }
            }
        </script>
        <!-- //end script -->
        <input type="submit" value="LOGIN" class="btn btn-primary btn-lg">
    </form>
</div>


<div>
    @Html.ActionLink("Register as a student", "/StudentRegistration/Index")
</div>
